{
  "imports": {
    "@hono/valibot-validator": "jsr:@hono/valibot-validator@^0.5.3",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@valibot/valibot": "jsr:@valibot/valibot@^1.1.0",
    "@hono/hono": "jsr:@hono/hono@^4.6.0",
    "openai": "npm:openai@^4.79.0",
    "pg": "npm:pg@^8.13.1",
    "pgvector/pg": "npm:pgvector@^0.2.0/pg",
    "@llamaindex/ollama": "npm:@llamaindex/ollama@0.1.23",
    "llamaindex": "npm:llamaindex@0.12.0"
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "rag": "deno run -A scripts/rag-cli.ts",
    "search": "deno run -A scripts/search-cli.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["scripts/", "src/"],
    "exclude": []
  },
  "lint": {
    "include": ["scripts/", "src/"],
    "exclude": [],
    "rules": {
      "tags": ["recommended"]
    }
  }
}
