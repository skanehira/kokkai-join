{
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@valibot/valibot": "jsr:@valibot/valibot@^1.1.0",
    "@hono/hono": "jsr:@hono/hono@^4.6.0"
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "rag": "deno run -A scripts/rag-cli.ts",
    "search": "deno run -A scripts/search-cli.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["scripts/", "src/"],
    "exclude": []
  },
  "lint": {
    "include": ["scripts/", "src/"],
    "exclude": [],
    "rules": {
      "tags": ["recommended"]
    }
  }
}
